<%= form_with(url: session_path) do |form| %>
  <div class="mb-4">
    <%= form.label :login, "Username", class: "block mb-2" %>
    <%= form.text_field :login, required: true, class: "input-field" %>
  </div>

  <div class="mb-4">
    <%= form.label :password, "Password", class: "block mb-2" %>
    <%= form.password_field :password, required: true, class: "input-field" %>
  </div>

  <%= form.submit(
    value: "Log In",
    class: "button mx-auto",
    data: {
      disable_with: "..."
    }
  ) %>
<% end %>
