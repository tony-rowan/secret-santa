<%= form_with(url: session_path) do |form| %>
  <%= render "input_field", form: form, name: :login, type: :text_field, label: "Username", field_extra: { required: true, autocomplete: "username", autofocus: true } %>
  <%= render "input_field", form: form, name: :password, type: :password_field, label: "Password", field_extra: { required: true, autocomplete: "off" } %>

  <%= form.submit(
    value: "Sign In",
    class: "button mx-auto"
  ) %>
<% end %>
