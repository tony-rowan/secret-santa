<%= render "section" do %>
  <h2 class="text-xl text-center">
    <% if group %>
      To join <%= group.owner.name %>'s group, <%= group.name %> please sign in or a create an account
    <% else %>
      Join a Group
    <% end %>
  </h2>
<% end %>

<div class="flex flex-col sm:flex-row content-center items-center justify-center gap-4">
  <%= link_to "Sign In", new_session_path, class: "button" %>
  <span>or</span>
  <%= link_to "Create an Account", new_user_path, class: "button" %>
</div>
