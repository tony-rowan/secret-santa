<h1>Secret Santa</h1>
<p>Hello <%= Current.user.name %></p>

<% Current.user.groups.each do |group| %>
  <p>
    <%= link_to group.name, group %>
  </p>
  <p>
    <%= group.users.count%> members
  </p>
  <p>
    You have <%= Current.user.pairs.find_by(group: group).other.name %>
  </p>
<% end %>

<%= link_to "Create a new group", new_group_path %>

<%= link_to "Log Out", sessions_path, method: :delete %>

