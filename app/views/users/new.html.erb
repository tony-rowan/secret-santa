<p class="text-xl text-center mb-8">Get started by making an account and a group</p>

<%= form_with(model: @user) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= @error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <h3 class="text-xl mb-2">Create Your Account</h3>

    <div class="mb-4">
      <%= form.label :name, "Display Name", class: "block mb-2" %>
      <%= form.text_field :name, class: "block w-full p-2 rounded bg-blue-300 bg-opacity-25 border-2 border-blue-300" %>
    </div>

    <div class="mb-4">
      <%= form.label :login, "Username", class: "block mb-2" %>
      <%= form.text_field :login, class: "block w-full p-2 rounded bg-blue-300 bg-opacity-25 border-2 border-blue-300" %>
    </div>

    <div class="mb-4">
      <%= form.label :password, class: "block mb-2" %>
      <%= form.password_field :password, class: "block w-full p-2 rounded bg-blue-300 bg-opacity-25 border-2 border-blue-300" %>
    </div>
  </div>

  <div class="mb-4">
    <h3 class="text-xl mb-2">Create Your Group</h3>

    <%= form.fields_for(:groups) do |form| %>
      <div class="mb-4">
        <%= form.label :name, class: "block mb-2" %>
        <%= form.text_field :name, class: "block w-full p-2 rounded bg-blue-300 bg-opacity-25 border-2 border-blue-300" %>
      </div>

      <div class="mb-4">
        <%= form.label :rules, class: "block mb-2" %>
        <%= form.text_area :rules, class: "block w-full p-2 rounded bg-blue-300 bg-opacity-25 border-2 border-blue-300" %>
      </div>
    <% end %>
  </div>

  <%= form.submit "Get Started", class: "button w-full" %>
<% end %>
